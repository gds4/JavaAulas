package labvi;
import java.time.LocalTime;
import java.util.Calendar;
import java.util.Scanner;

public class MusicStore {
	
	private String owner;
	private int openTime;
	private int closeTime;
	
	public MusicStore() {
		
		this.owner = "sem dono";
		this.openTime = 9;
		this.closeTime = 21;
		
	}
	
	public void  setOwner() {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Informe o nome do Dono:");
		this.owner = scanner.nextLine();
		scanner.close();
		
	}
	
	public void setOpen() {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Informe o horário de abertura: ");
		this.openTime = scanner.nextInt();
		scanner.close();
		
	}
	
	public void setClose() {
		
		Scanner scanner = new Scanner(System.in);
		System.out.println("Informe o horário de fechamento: ");
		this.closeTime = scanner.nextInt();
		scanner.close();
		
	}
	
	public String getOwner() {
		
		return this.owner;
		
	}
	
	public int getOpen() {
		
		return this.openTime;
		
	}
	
	public int getClose() {
		
		return this.closeTime;
		
	}
	
	public int getHourInt() { 
		Calendar c = Calendar.getInstance(); 
		return c.get(Calendar.HOUR_OF_DAY); 
	} 
	 
	public boolean isOpen() {
		LocalTime abertura = LocalTime.of(openTime, 0,0);
		LocalTime fechamento = LocalTime.of(closeTime, 0,0);
		
		LocalTime horarioAtual = LocalTime.now();
		
		if(horarioAtual.isAfter(abertura) && horarioAtual.isBefore(fechamento)) {
			return true;
		}else {
			return false;
		}
	}
	
	public void displayHoursOfOperation() {
		
		System.out.println("Periodo:");
		System.out.println("Diariamente das " + openTime + ":00 - " + closeTime + ":00");
		
	}
	
	public static void main(String[] args) {
		
		/*MusicStore testa_MS = new MusicStore();
		testa_MS.displayHoursOfOperation();
		testa_MS.setOwner();
		if(testa_MS.isOpen()) {
			System.out.println("balksnadklasnd");
		}
		*/
		
		System.out.println(getHourInt());
	
		
	}
}
